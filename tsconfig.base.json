{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nfid/accounts": ["packages/accounts/src/index.ts"],
      "@nfid/core": ["packages/core/src/index.ts"],
      "@nfid/credentials": ["packages/credentials/src/index.ts"],
      "@nfid/wallet": ["packages/wallet/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
